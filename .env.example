# =============================================================================
# Therapy Session Management Application - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# NEVER commit .env files with real secrets to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Configuration
# -----------------------------------------------------------------------------
FLASK_APP=wsgi.py
FLASK_ENV=development
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-generate-with-python-secrets

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite (Development)
DATABASE_URL=sqlite:///instance/database.db

# PostgreSQL (Production) - uncomment and configure for production
# DATABASE_URL=postgresql://user:password@localhost:5432/appalapapa

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_LIFETIME_DAYS=7

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Rate limiting (requests per minute for auth endpoints)
RATE_LIMIT_AUTH=5

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for password reset)
# -----------------------------------------------------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for rate limiting in production)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# -----------------------------------------------------------------------------
# Error Monitoring (Production)
# -----------------------------------------------------------------------------
# Get DSN from https://sentry.io
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ALLOW_DELETE=True
ITEMS_PER_PAGE=50
